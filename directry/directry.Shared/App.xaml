<Application
    x:Class="directry.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:directry">

    <Application.Resources>
        <Color x:Key="dirLabelColorWhite">#FFFFFFFF</Color>
        <Color x:Key="dirBackgroundColorBlue">#FF4C4CF5</Color>


        <Style x:Key="dirBlackBorderTextBox" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20.26" />
        </Style>
        <Style x:Key="dirBlackBorderPasswordBox" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20.26" />
        </Style>
        <Style x:Key="dirBlackBorderComboBox" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20.26" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </Application.Resources>
</Application>
